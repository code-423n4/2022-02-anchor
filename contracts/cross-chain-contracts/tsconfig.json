{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "moduleResolution": "node",
    "incremental": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "lib": ["ES2020", "ES2020.Promise", "dom"],
    "noImplicitAny": false,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
  },
  "include": ["./src", "./scripts"],
}
